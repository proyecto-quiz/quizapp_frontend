{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["DOM.Iterable", "ES6", "DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "include": ["src", "./**/*.vue", "./**/*.js"],
  "exclude": ["node_modules", "dist"]
}
