{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
    "module": "esnext",
    "strict": true,
    "alwaysStrict": true,
    "composite": true,
    "jsx": "preserve",
    "types": ["vite/client", "@types/node", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    "vite.config.ts",
    "@types",
    "@types/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
